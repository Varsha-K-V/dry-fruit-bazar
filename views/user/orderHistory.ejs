    <body>
        <div class="container">
            <a href="/userProfile" class="back-button">
                <i class="fas fa-arrow-left"></i> Back to profile
            </a>
            <br>
            <br>
            <br>
            <div class="page-header">
                <h1 class="page-title" style="font-size: 25px;">My Orders</h1>
            </div>



            <% if (orders && orders.length> 0) { %>
                <% orders.forEach(order=> { %>
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <strong>Order ID</strong>
                                <span>
                                    <%= order._id %>
                                </span>
                            </div>
                            <div class="order-info">
                                <strong>Order Date</strong>
                                <span>
                                    <%= new Date(order.createdAt).toLocaleDateString() %>
                                </span>
                            </div>
                            <div class="order-info">
                                <strong>Status:</strong>
                                <% if (order.status) { %>
                                    <div class="status-badge status-<%= order.status.toLowerCase() %>">
                                        <%= order.status %>
                                    </div>
                                    <% } else { %>
                                        <div class="status-badge status-pending">Pending</div>
                                        <% } %>
                            </div>

                        </div>

                        <div class="order-content">
                            <div class="product-list">
                                <% order.products.forEach(product=> { %>
                                    <div class="product-item">
                                        <div class="product-image">
                                            <img src="/uploads/productImage/<%= product.productId?.productImage[0] || 'productImage/default.jpg' %>"
                                                alt="<%= product.productId?.productName %>">
                                        </div>
                                        <div class="product-details">
                                            <h4>
                                                <%= product.productId?.productName %>
                                            </h4>
                                            <p>Weight: <%= product.variantId.weight %>
                                            </p>
                                            <p>Quantity: <%= product.quantity %>
                                            </p>
                                            <p>Price: ₹<%= product.price.toFixed(2) %>
                                            </p>
                                        </div>
                                        <div class="product-price">
                                            ₹<%= (product.price * product.quantity).toFixed(2) %>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>

                        <div class="order-footer">
                            <div class="order-total">
                                Total: ₹<%= order.totalAmount.toFixed(2) %>
                            </div>
                            <div class="action-buttons">
                                <a href="/orderDetails/<%= order._id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <% if (orders.statusHistory && orders.statusHistory[orders.statusHistory.length -
                                    1].status==='Delivered' ) { %>
                                    <a href="/reorder/<%= orders._id %>" class="btn btn-outline">
                                        <i class="fas fa-redo"></i> Buy Again
                                    </a>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="empty-orders">
                                <i class="fas fa-shopping-bag"></i>
                                <h3>No Orders Yet</h3>
                                <p>Looks like you haven't placed any orders yet.</p>
                                <a href="/shop" class="btn btn-primary">Start Shopping</a>
                            </div>
                            <% } %>
        </div>

        <div class="pagination">
            <% if (currentPage> 1) { %>
                <a href="/orderHistory?page=<%= currentPage - 1 %>" class="btn btn-outline">Previous</a>
                <% } %>

                    <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="/orderHistory?page=<%= i %>"
                            class="btn <%= i === currentPage ? 'btn-primary' : 'btn-outline' %>">
                            <%= i %>
                        </a>
                        <% } %>

                            <% if (currentPage < totalPages) { %>
                                <a href="/orderHistory?page=<%= currentPage + 1 %>" class="btn btn-outline">Next</a>
                                <% } %>
        </div>


    </body>

