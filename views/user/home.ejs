.wishlist-btn {
   position: absolute;
   top: 8px;
   right: 8px;
   background-color: white; /* White background */
   /* border: 2px solid #1e918b; */
   border-radius: 50%;
   padding: 8px;
   cursor: pointer;
   display: flex;
   align-items: center;
   justify-content: center;
   transition: all 0.3s ease-in-out;
}

/* Heart icon with only an outline */
.wishlist-btn i {
   /* color: black;  */
   font-size: 16px; /* Adjust size */
   transition: color 0.3s ease-in-out;
   -webkit-text-stroke: 2px #1e918b;  
   color: transparent; /* Transparent inside */
}

/* Hover effect: Fill heart with black */
.wishlist-btn:hover i {
   color: #1e918b; /* Filled black heart on hover */
}

/* When product is added to wishlist, fill heart */
.wishlist-btn.active i {
   -webkit-text-stroke: 0px; /* Remove outline */
   color: #1e918b; /* Filled heart */
}
