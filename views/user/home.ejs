<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li style="color: black; font-weight: bold;" data-filter=".new-arrivals">New Arrivals</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter" style="height: auto;">
            <% if (products && products.length > 0) { %>
              <% for (let i = 0; i < products.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-12 col-sm-6" style="height: 250px;">
                  <div class="product-cart-wrap mb-30" style="height:250px">
                    <div class="product-img-action-wrap" style="height: 250px;">
                      <div class="product-img product-img-zoom">
                        <a href="/productDetails?id=<%= products[i]._id %>">
                          <img class="default-img" src="/uploads/productImage/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                        </a>
                      </div>
                     
                    </div>
        
                    <div class="product-content-wrap">
                      <h6 style="color: black;">
                        <p style="font-weight: bold;"><%= products[i].productName %></p>
                      </h6>
          
                    </div>
                  </div>
                </div>
              <% } %>
            <% } else { %>
              <p>No products available</p>
              <p>Debug: Products array is <%= products ? 'defined' : 'undefined' %> with length <%= products ? products.length : 0 %></p>
            <% } %>
        </div>
    </div>
  </section>
  
