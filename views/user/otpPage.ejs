    <style>
        body, html {
            background-color: #fef3e2;
            height: 100%;
            margin: 0;
            font-family: "Nunito Sans", sans-serif;
            overflow: hidden;
        }
        .container {
            background-color: #dba56f;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        .login_wrap {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            border-radius: 5px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .heading_s1 h3 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .otp-timer {
            display: inline-block;
            margin-left: 10px;
            font-size: 14px;
            position: relative;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            line-height: 60px;
            text-align: center;
            background: #f2f2f2;
            border: 2px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        #timerValue {
            display: block;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            line-height: 60px;
        }
        #timerValue.expired {
            font-size: 14px;
            color: red;
        }
        .btn-primary {
            background-color: #000;
            border: none;
            width: 100%;
            margin-top: 10px;
            display: block;
        }
        .btn-primary:hover {
            background-color: #6c757d;
        }
        .btn-secondary {
            width: 100%;
            background-color: #6c757d;
            border: none;
            margin-top: 10px;
            display: none;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .alert-danger {
            margin-top: 15px;
            text-align: center;
        }
        .text-center {
            text-align: center;
            margin-top: 15px;
        }
        .text-muted {
            color: #6c757d;
            text-align: center;
        }
        .pt-25 {
            padding-top: 25px;
        }
    </style>

</head>
<body>
<div class="container">
    <div class="login_wrap">
        <div class="padding_eight_all bg-white">
            <div class="heading_s1">
                <h2 class="mb-4" style="font-size: 24px; text-align: center; font-weight: bold;">DRYFRUIT BAZAR</h2>
                <h3>Email Verification Page</h3>
            </div>
            <form 
            id="otpForm" 
            
           
            onsubmit="return validateOTPFrorm()">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <input type="text" id="otp" name="otp" class="form-control" required maxlength="6" pattern="\d*" />
                </div>
                <button type="submit" id="verifyBtn" class="btn btn-primary">
                    <span id="verifyText">Verify Email</span>
                    <span id="verifySpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                </button>
                <div class="form-group text-center">
                    <div id="otpTimer" class="otp-timer">
                        <span id="timerValue">60</span>
                    </div>
                    <button id="resendOtp" type="button" class="btn btn-secondary" onclick="resendOTP()">
                        <span id="resendText">Resend OTP</span>
                        <span id="resendSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
                <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
            </form>
            <div class="text-muted text-center pt-25">
                Already verified? <a href="/login">Login now</a>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById("otp").focus();

    let timer = 60;
    let timerInterval;

    function startTimer() {
        document.getElementById("resendOtp").style.display = "none";
        timerInterval = setInterval(() => {
            timer--;
            document.getElementById("timerValue").textContent = timer;
            if (timer <= 0) {
                clearInterval(timerInterval);
                document.getElementById("timerValue").classList.add("expired");
                document.getElementById("timerValue").textContent = "Expired";
                document.getElementById("otp").disabled = false;
                document.getElementById("resendOtp").style.display = "block";
            }
        }, 1000);
    }
    startTimer();

    function validateOTPFrorm(){
        const otpInput = document.getElementById("otp").value;
        const verifyBtn = document.getElementById("verifyBtn");
        const verifyText = document.getElementById("verifyText");
        const verifySpinner = document.getElementById("verifySpinner");

        verifyBtn.disabled = true;
        verifyText.textContent = "Verifying...";
        verifySpinner.classList.remove("d-none");

        $.ajax({
            type:"POST",
            url:"otpPage",
            data:{otp:otpInput},
            success: function(response){
                if(response.success){
                    Swal.fire({
                        icon:"success",
                        title:"OTP Verified Successfully",
                        ShownConfirmButton:false,
                        timer:1500,
                    }).then(()=>{
                        window.location.href = response.redirectUrl;

                    })
                }else{
                    Swal.fire({
                        icon:"error",
                        title:Error,
                        text:response.message,
                    })
                }
            },
            error: function (){
                Swal.fire({
                    icon:"error",
                    title:"Invalid OTP",
                    text:"Please try again"
                })
            },

            complete: function(){
            // Hide loading effect after AJAX completes
            verifyBtn.disabled = false;
            verifyText.textContent = "Verify Email";
            verifySpinner.classList.add("d-none");
        }

        })
        return false;
    }

    function resendOTP(){
        const resendBtn = document.getElementById("resendOtp");
        const resendText = document.getElementById("resendText");
        const resendSpinner = document.getElementById("resendSpinner");

        resendBtn.disabled = true;
        resendText.textContent = "Resending...";
        resendSpinner.classList.remove("d-none");
        
        clearInterval(timerInterval);
        timer=60;
        document.getElementById("otp").disabled=false;
        document.getElementById("timervalue")
        $.ajax({
            type:"POST",
            url:"resendOtp",
            success: function (response){
                if(response.success){
                    Swal.fire({
                        icon:"success",
                        title:"OTP Resend Successfully",
                        ShownConfirmButton:false,
                        timer:1500,
                    }).then(()=>{
                        startTimer();
                    
                    })
                    
                }else{
                    Swal.fire({
                        icon:"error",
                        title:"Error",
                        text:"An error occured while resending OTP. Please try again"
                    })
                }
            },

            complete: function(){
            // Hide loading effect after AJAX completes
            resendBtn.disabled = false;
            resendText.textContent = "Resend OTP";
            resendSpinner.classList.add("d-none");
        }


        })
        return false;
    }

</script>
