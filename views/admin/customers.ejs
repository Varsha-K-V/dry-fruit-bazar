

        <%- include("../../views/partials/admin/header") %>
<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Customers</h2>
    </div>
</div>

<!-- Search Bar -->
<header class="card-header text-center mb-4">
    <form action="/admin/users/" method="get" class="d-inline">
        <div class="input-group input-group-sm border rounded-pill mx-auto" style="max-width: 500px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search">
            <button class="btn border-0 rounded-pill" type="submit" style="background-color: #007bff; color: white;">Search</button>
        </div>
    </form>
</header>

<!-- Customer Table -->
<div class="mt-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center"><b>Name</b></th>
                <th scope="col" class="text-center"><b>Email</b></th>
                <th scope="col" class="text-center"><b>Phone No</b></th>
                <th scope="col" class="text-center"><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.length; i++) { %>
                <tr>
                    <td class="text-center"><%= data[i].name %></td>
                    <td class="text-center"><%= data[i].email %></td>
                    <td class="text-center"><%= data[i].mobileNumber %></td>
                    <td class="text-center">
                        <% if (data[i].is_Blocked === false) { %>
                            <button class="btn btn-danger">
                                <a href="/admin/blockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Block</a>
                            </button>
                        <% } else { %>
                            <button class="btn btn-success">
                                <a href="/admin/unblockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Unblock</a>
                            </button>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

